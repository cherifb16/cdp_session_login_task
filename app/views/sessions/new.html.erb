<!-- app/views/sessions/new.html.erb -->
 
<h1>Login</h1>
 
<% if flash[:login_error] %>
  <p><%= flash[:login_error] %></p>
<% end %>
 
<%= form_for :session, url: :sessions_create do |f| %>
 
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
 
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
 
  <p><%= f.button "Login" %></p>
 
<% end %>

<p>New user? <%= link_to "Sign up now!", signups_new_path %></p>